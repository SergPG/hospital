<h2><%= current_user.full_name %> </h2>

<%= link_to('New Appointment', new_appointment_path) %>
<h3>Appointments</h3>
<% @appointments.each do |appointment| %>
  <p> <%= current_user.doctor? ? "Patient: #{appointment.patient.full_name}" : "Doctor: #{appointment.doctor.full_name}" %> - Date at: <%=appointment.date_at %> Recommendation: <%= appointment.recommendation%> <%= link_to 'View', appointment%> </p>
<% end %>