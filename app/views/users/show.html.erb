<div class="container">

<h2>My profile:  <%= current_user.full_name %> </h2>


<div>
  <% if !current_user.doctor?  %>
    <%= link_to 'Create appointment', new_appointment_path, class: 'btn btn-primary btn-sm' %>
  <% end %>
</div> 
 
  <table class="table">
  <thead>
    <tr>
      <th style="width: 20%"></th>
      <th style="width: 80%"></th>    
    </tr> 
  </thead>
  <tbody>
    
    <% if current_user.doctor?  %>
    <tr>
      <th scope="row">Category</th>
      <td>
        <%= current_user.doctor.category.name %>
      </td>
    </tr>
    <% end %>


    <tr>
      <th scope="row">
        <%= current_user.doctor? ? "Doctor" : "Patient" %> 
      </th>
      <td>
        <%= current_user.full_name %>
      </td>
    </tr>
    <tr>
      <th scope="row">Phone</th>
      <td>
        <%= current_user.phone_number %>
      </td>
    </tr>
  </tbody>
</table>

</div>